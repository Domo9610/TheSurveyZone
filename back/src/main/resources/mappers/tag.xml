<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tag">
    <insert id="insertSurveyTag" parameterType="SurveyTag">
        insert into survey.surveytag values(#{_id},#{Tag_ID});
    </insert>
    <select id="selectTagList" resultType="Tag">
        select * from survey.Tag;
    </select>
    <select id="selectTagExistList" resultType="Tag" parameterType="String">
    <choose>
        <when test='_id == ""'>
            Select * from survey.Tag where Tag_ID in (select Tag_ID from SurveyTag);
        </when>
        <otherwise>
            select * from survey.Tag where Tag_ID in (select Tag_ID from SurveyTag where _id = #{_id});
        </otherwise>
    </choose>
    </select>
</mapper>