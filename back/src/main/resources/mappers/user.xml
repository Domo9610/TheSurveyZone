<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <select id="findUserAll" resultType="UserDTO">
        select
        *
        from
        user
    </select>

    <select id="selectEmail" parameterType="String" resultType="String">
        select User_Email from user where User_Email = #{param}
    </select>

    <insert id="createUser" parameterType="UserDTO">
        insert into User values(#{user_Email},#{user_Password},#{user_Name},#{user_Tel})
    </insert>

    <select id="login" parameterType="UserDTO" resultType="UserDTO">
        select * from user where User_Email = #{user_Email};
    </select>
</mapper>