<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <select id="existsByEmail" parameterType="String" resultType="String">
        select User_Email from user where User_Email = #{param}
    </select>

    <insert id="createUser" parameterType="User_MySQL">
        insert into User values(#{user_Email},#{user_Password},#{user_Name},#{user_Tel})
    </insert>

    <select id="findByEmailAndPassword" parameterType="User_MySQL" resultType="User_MySQL">
        select User_Email, User_Password, User_Name from user where User_Email = #{user_Email};
    </select>
</mapper>